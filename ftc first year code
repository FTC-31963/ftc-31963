package org.firstinspires.ftc.teamcode;

import com.qualcomm.robotcore.eventloop.opmode.LinearOpMode;
import com.qualcomm.robotcore.eventloop.opmode.TeleOp;
import com.qualcomm.robotcore.hardware.DcMotor;

@TeleOp(name = "real (Blocks to Java)")
public class real extends LinearOpMode {

  private DcMotor rcontrolhubside;
  private DcMotor leftwheel;
  private DcMotor upperwheel;
  private DcMotor blocker;

  /**
   * This sample contains the bare minimum Blocks for any regular OpMode. The 3 blue
   * Comment Blocks show where to place Initialization code (runs once, after touching the
   * DS INIT button, and before touching the DS Start arrow), Run code (runs once, after
   * touching Start), and Loop code (runs repeatedly while the OpMode is active, namely not
   * Stopped).
   */
  @Override
  public void runOpMode() {
    rcontrolhubside = hardwareMap.get(DcMotor.class, "rcontrol hub side");
    leftwheel = hardwareMap.get(DcMotor.class, "leftwheel");
    upperwheel = hardwareMap.get(DcMotor.class, "upperwheel");
    blocker = hardwareMap.get(DcMotor.class, "blocker");

    // Put initialization blocks here.
    rcontrolhubside.setDirection(DcMotor.Direction.REVERSE);
    leftwheel.setDirection(DcMotor.Direction.FORWARD);
    upperwheel.setDirection(DcMotor.Direction.FORWARD);
    blocker.setDirection(DcMotor.Direction.REVERSE);
    waitForStart();
    if (opModeIsActive()) {
      // Put run blocks here.
      while (opModeIsActive()) {
        // Put loop blocks here.
        rcontrolhubside.setPower(-gamepad1.right_stick_y);
        leftwheel.setPower(-gamepad1.left_stick_y);
        upperwheel.setPower(-gamepad2.left_stick_y);
        blocker.setPower(-gamepad2.right_stick_y);
      }
    }
  }
}
